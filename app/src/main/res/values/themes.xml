<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimpleMapProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/stPatrickBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/stPatrickBlue</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="contentTextStyleSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/normalTextColor</item>
    </style>
    <style name="contentTextStyleMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/normalTextColor</item>
    </style>
    <style name="contentTextStyleLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/normalTextColor</item>
    </style>

    <style name="contentBlackTextStyleSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>
    <style name="contentBlackTextStyleMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>
    <style name="contentBlackTextStyleLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>


    <style name="titleTextStyleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleTextStyleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleTextStyleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleTextStyleExtraLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>